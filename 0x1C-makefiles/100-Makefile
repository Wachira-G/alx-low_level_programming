CC = gcc

SRC = main.c school.c

# generated by replacing the .c extension with .o for each source file.
OBJ = $(SRC:.c=.o)

NAME = 	school

CFLAGS = -Wall -Werror -Wextra -pedantic

# Target: school (the executable)
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# default rule
all: $(NAME)

clean:
	-$(RM) -f *~ $(NAME)

oclean:
	-$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all

$(OBJ): m.h

.PHONY: all clean oclean fclean re

